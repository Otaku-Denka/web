    animation: scaleOut 0.6s cubic-bezier(0.165, 0.84, 0.44, 1)
}
    
.card    
    display: inline-block
    reset-link()
    max-width 320px
    position relative
    margin-bottom 20px
    margin 10px 5px
    padding-bottom 30px
    color $font-color
    height 100%
    background-color: light-grey
    shadow-level(2)
    trans(0.3s)
    border-radius: 6px
    &:hover
        shadow-level(3)
        .card-meta
            height 1em
    span
        display block
    .card-summary
        padding 5% 5% 3% 5%
    +below($med)
        max-width 100%
        margin-right 0
        .card-meta
            height 1em

    

.card-header
    width 320px
    min-height 100%
    background-size: cover
    background-position: center
    background-repeat: no-repeat
    position relative
    background-color: rgba(white, .2)
    background-blend-mode: overlay
    trans(0.5s)
    img
        width 100%
    +below($med)
        width 100%
    &:hover
        background-color: rgba(white,0)

.card-title
    padding 3.5% 0 2.5% 0
    color white
    text-transform: uppercase
    width 100%
    background-color: #66CCCC
    h3
        font-size 1.2em
        line-height: 1.2
        padding 0 3.5%
        margin 0
        text-align center

.card-meta
    height 0
    overflow hidden
    color #003366
    font-size .75em
    text-transform: uppercase
    position absolute
    bottom 3%
    padding 0 5%
    trans(0.4s)

.category
    display flex
    justify-content center

.btn
    reset-link()
    position: relative;
    corsor pointer
    color $font-color
    display inline-block
    font-size 16px
    line-height 45px
    margin-top 70px
    width 100%
    max-width 160px
    letter-spacing 0
    border 0px
    text-align center
    trans(0.5s)
    &:hover
        letter-spacing 5px
        &:after, &:before
            border-color black
            width 70%

    &:after , &:before
        border 1px solid rgba(#fff, 1)
        content ""
        display block
        margin 0 auto
        position relative
        width 0
        trans()

.cate-active
    letter-spacing 5px
    &:after , &:before
        border 1px solid rgba(#000, 1)
        content ""
        display block
        margin 0 auto
        position relative
        width 70%

