// Main nav


    
header
    opacity 0.8
    color #fff
    background: rgba(255,255,255,0.8)
    padding: 10px 5%
    fixed top left
    width 100%
    border-radius: 0 0 10px 10px
    height 60px;
    z-index: z.header
    shadow-level(2)
    clearfix()
    +below($large)
        opacity 1
    nav 
        text-align center
        a
            color: black
            text-decoration: none
            margin-left 30px
            font-size 1.2em
            line-height 36px
            display: inline-block
            border-bottom 2px solid transparent
            trans()
            +below($large)
                display: block
                text-align: center
                border-bottom 3px solid grey
                padding 10px
                margin-left 0px
                
            &:hover 
                color teal
                border-color black
                

.links
    background-color rgba(255,255,255,1)
    position absolute
    left 0
    width 100vw
    height 0px
    border-radius: 0 0 20px 20px
    trans()
    +below($large)
        top 50px
        padding 0 50px
        margin-right 0px
        overflow:hidden;
.active
    display:block
    height 236px
    





.toggle
    position absolute
    width 40px
    height 40px
    padding 10px
    top 10px
    float left
    background-color: teal
    border-radius: 6px
    cursor pointer
    display: none
    +below($large)
        display: block
    span
        width 100%
        height 4px
        background-color: white
        display: block
        margin-bottom 3px
// ImagesPlayer

.images-player 
    position relative
    width 100vw
    height 100vh
    clearfix()
    > div 
