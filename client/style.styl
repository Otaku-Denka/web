        background-size: cover
        background-position: center center
        min-width 100%
        height 100%
        background-repeat: no-repeat
        trans()

.slide-back
    width 50%
    height 100%
    background:transparent
    display inline-block
    float left
    cursor pointer
    &:hover
        background: linear-gradient(to right,rgba(0,0,0,0.5) 10%,rgba(0,0,0,0) 20%)
        +below($large)
            background:transparent
.slide-next
    width 50%
    height 100%
    background:transparent
    display inline-block
    float right 
    cursor pointer
    &:hover
        background: linear-gradient(to left,rgba(0,0,0,0.5) 10%,rgba(0,0,0,0) 20%)
        +below($large)
            background:transparent
.slide-list
    position: absolute;
    bottom:70px;
    left:45%;
    div
        width: 10px;
        height: 10px;
        background: #fff;
        float: left;
        margin-right:10px;
        trans();
        border:1.25px solid #fff;
    .active
        background: #505050;

.fadeIn
    opacity 1

.fadeOut
    opacity 0

